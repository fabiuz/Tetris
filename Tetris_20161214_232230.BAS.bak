FUNCTION PBMAIN () AS LONG
'***********************************************************************************************
' main
'***********************************************************************************************
                                                      '
	Dim janelaBloco as long
	graphic window new "Blocks v1.0 - Autor Fábio Moura", 0, 0, 400, 400 to janelaBloco
	
	local larguraTela, alturaTela as long
	' Obter tamanho:
	graphic get ppi to larguraTela, alturaTela
	
	do
		graphic print "Tela, largura = " + format$(larguraTela) + ", " + _
		format$(alturaTela)
	loop while len(graphic$(INKEY$)) = 0
		
     


END FUNCTION


